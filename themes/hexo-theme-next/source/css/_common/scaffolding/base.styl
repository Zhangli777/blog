::selection {
  background: url("https://source.unsplash.com/random600*300");
  color: $selection-color;
  padding: 18px 0;
}
.site-meta {
  background: url("https://source.unsplash.com/random600*300");
  background-position: 70% 20%;
  padding: 18px 0;
}
body {
  position: relative; 
  font-family: $font-family-base;
  font-size: $font-size-base;
  line-height: $line-height-base;
  color: $text-color;
  background-image: url("https://source.unsplash.com/random/1600*900");
  background-repeat:no-repeat;
  background-attachment: fixed;
  background-position: 50% 50%; 
  background-size: cover

  +tablet-mobile() { padding-right: 0 !important; }
  +desktop-large() { font-size: $font-size-large; }
}

  +tablet-mobile() {
    // Remove the padding of body when the sidebar is open.
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

h1, h2, h3, h4, h5, h6 {
  font-family: $font-family-headings;
  font-weight: bold;
  line-height: 1.5;
  margin: 20px 0 15px;
}

for headline in (1 .. 6) {
  h{headline} {
    font-size: $font-size-headings-base - $font-size-headings-step * headline;
  }
}

p {
  margin: 0 0 20px 0;
}

a, span.exturl {
  border-bottom: 1px solid $link-decoration-color;
  color: $link-color;
  outline: 0;
  text-decoration: none;
  word-wrap();

  &:hover {
    border-bottom-color: $link-decoration-hover-color;
    color: $link-hover-color;
  }

  // For spanned external links.
  cursor: pointer;
}

iframe, img, video {
  display: block;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
}

hr {
  background-color: $gray-lighter;
  background-image: repeating-linear-gradient(-45deg, white, white 4px, transparent 4px, transparent 8px);
  border: 0;
  height: 3px;
  margin: 40px 0;
}

blockquote {
  border-left: 4px solid $gray-lighter;
  color: $grey-dim;
  margin: 0;
  padding: 0 15px;

  cite::before {
    content: '-';
    padding: 0 5px;
  }
}

dt {
  font-weight: $font-weight-bolder;
}

dd {
  margin: 100px;
  padding: 0;
}

kbd {
  background:linear-gradient(top, #eee, white, #eee);
    background-repeat: no-repeat;
    background-attachment:fixed;
    background-position:50% 50%;
}
.content-wrap{ 
    margin-top: 60px;
    padding: 60px 60px 60px 60px;
    background: #fff;
    opacity: 0.8;
    min-height: 500px;
    border-radius: 20px; //文章背景设置圆角

}
